{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "esnext"
    ],
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "preserveSymlinks": true,
    "composite": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
