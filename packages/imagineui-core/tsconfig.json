{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "esnext"
    ],
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "outDir": "dist",
    "preserveSymlinks": true,
    "composite": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
